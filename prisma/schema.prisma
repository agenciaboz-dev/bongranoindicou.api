generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}
model User {
  id                Int      @id @default(autoincrement())
  name              String
  address           String
  number            String
  cep               String
  adjunct           String
  email             String   @unique
  whatsapp          String
  verified          Boolean  @default(false)
  friend1           Int?
  friend2           String
  friend3           String
  date              String
  verificationCode  String
  verificationSentAt DateTime?   // Add a timestamp for when the verification code was sent
  booked            Boolean  @default(false)
}